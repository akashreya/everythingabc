# Test Environment Configuration
# Uses in-memory MongoDB for isolated testing

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/everythingabc_test
ICS_MONGODB_URL=mongodb://localhost:27017/image_collection_test
USE_MEMORY_DB=true
AUTO_POPULATE=true
NODE_ENV=test
PORT=3004

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:5173

# Redis Configuration (disabled for testing)
REDIS_HOST=
REDIS_PORT=
REDIS_PASSWORD=

# Image APIs (disabled for testing)
UNSPLASH_ACCESS_KEY=
PIXABAY_API_KEY=
PEXELS_API_KEY=

# Image Storage Configuration (test paths)
IMAGES_DIRECTORY=./test_images
MAX_FILE_SIZE=1048576
MIN_QUALITY_SCORE=5.0
MAX_IMAGES_PER_ITEM=3
ENABLE_AI_GENERATION=false

# Rate Limiting (relaxed for testing)
UNSPLASH_RATE_LIMIT=10
PIXABAY_RATE_LIMIT=10
PEXELS_RATE_LIMIT=10

# Logging
LOG_LEVEL=error

# Performance (faster for testing)
CACHE_TTL=10
MAX_REQUESTS_PER_MINUTE=1000

# Admin Authentication (simplified for testing)
JWT_SECRET=test-secret-key-not-for-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=1d
SKIP_AUTH=true

# AWS Configuration (disabled for testing)
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_IMAGES_BUCKET=
CLOUDFRONT_DOMAIN=
CLOUDFRONT_DISTRIBUTION_ID=